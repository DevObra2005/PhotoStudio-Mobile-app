<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB7A7878"
    tools:context=".birthday">


  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:layout_editor_absoluteX="-16dp"
      tools:layout_editor_absoluteY="143dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <TextView
          android:id="@+id/textView12"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="100dp"
          android:fontFamily="@font/poppins_semibold"
          android:text="Birthday"
          android:textColor="@color/white"
          android:textSize="30sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.076" />

      <TextView
          android:id="@+id/textView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_semibold"
          android:text="Package 1:"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.085"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.147" />

      <TextView
          android:id="@+id/textView14"
          android:layout_width="281dp"
          android:layout_height="63dp"
          android:fontFamily="@font/poppins_semibold_italic"
          android:text="The Sweet Eighteen Package (Targeted towards Teens)"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.17"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.202" />

      <TextView
          android:id="@+id/textView15"
          android:layout_width="313dp"
          android:layout_height="136dp"
          android:layout_gravity="center"
          android:fontFamily="@font/poppins"
          android:text="Description: A stylish photoshoot capturing the vibrancy of a teen's birthday. Includes a variety of poses and backdrops, with digital editing and retouching"
          android:textAlignment="center"
          android:textSize="18dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.218"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.274" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="180dp"
          android:layout_height="250dp"
          android:scaleType="centerCrop"
          android:src="@drawable/birthday"
          android:layout_gravity="center"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.818"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.48" />

      <TextView
          android:id="@+id/textView16"
          android:layout_width="190dp"
          android:layout_height="198dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/poppins"
          android:text="Duration: 1 hour
                    Price: P450
                    Inclusions:
                    20 edited high-resolution digital images, online gallery for sharing"
          android:textAlignment="center"
          android:textSize="18sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.084"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:ignore="HardcodedText" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/poppins_semibold"
          android:text="Package 2:"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.07"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.663" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="311dp"
          android:layout_height="64dp"
          android:fontFamily="@font/poppins_semibold_italic"
          android:text="The Little Rascals Package (Targeted towards Toddlers/Young Children)"
          android:textSize="16sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.23"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.723" />


      <!-- Your content goes here -->
      <TextView
          android:id="@+id/textView18"
          android:layout_width="269dp"
          android:layout_height="174dp"
          android:layout_gravity="center"
          android:fontFamily="@font/poppins"
          android:text="Description: A fun and playful photoshoot designed for younger children. Includes props, games, and a relaxed atmosphere to capture genuine smiles and expression "
          android:textAlignment="center"
          android:textSize="18sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.241"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0" />


      <ImageView
          android:layout_width="180dp"
          android:layout_height="250dp"
          android:layout_gravity="center"
          android:scaleType="centerCrop"
          android:src="@drawable/youngbirthday" />

      <TextView
          android:id="@+id/textView19"
          android:layout_width="183dp"
          android:layout_height="245dp"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/poppins"
          android:text="Duration: 40 minutes 
           Price: P400
           Inclusions:15 edited high-resolution digital images, online gallery for sharing"
          android:textAlignment="center"
          android:textSize="18sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.084"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:ignore="HardcodedText" />

      <Button
          android:id="@+id/btn_signin"
          android:layout_width="130dp"
          android:layout_height="60dp"
          android:layout_gravity="end"
          android:layout_marginRight="30dp"
          android:layout_marginBottom="30dp"
          android:backgroundTint="#D6D9D9D9"
          android:fontFamily="@font/poppins_bold"
          android:text="Book"
          android:textColor="@color/black"
          android:textSize="20sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.924"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.916" />


      <!-- Add more views here -->

    </LinearLayout>
  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>